{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1300,
    "height": 450,
    "title": "Count of fires base on time for each day",
    "data": {
        "url":"https://raw.githubusercontent.com/howardli99/Vis2/main/fire_australia.csv",
        "format":{"type": "csv"}
    },
    "config": {
        "background": "antiquewhite",
        "view": {"stroke": null},
        "axis": {"grid": false}
    },

    
    "params": [
        {
            "name": "month_selection",
            "bind":{
                "input": "select",
                "options":[
                        null,
                        "2019-08",
                        "2019-09"
                ],
                "labels":[
                        "Show All",
                        "2019-08",
                        "2019-09"
                ],
                "name": "Month Selection: "
            }
        }
    ],

    "transform": [
        {"filter":"month_selection == null || datum.month == month_selection"}
        
    ],

    



    "encoding": {
        "y":{
            "field":"time",
            "title": "Time of fire",
            "type": "ordinal"
        },
        "x":{
            "field":"acq_date",
            "title": "Date of fire",
            "type":"ordinal"
        },
        "color": {"aggregate":"count", "type": "quantitative","scale":{"scheme": "reds"}}
    
    },

    
    
    "mark": {"type": "rect","tooltip":{"content": "data"}}

        
}
    

